{
  "name": <%= JSON.stringify(pkgName) %>,
  "version": "1.0.0",
  "description": <%= JSON.stringify(pkgDescription) %>,
  "main": "dist/index.js",
  "keywords": <%=
    // extra array wrapper to reach the desired indentation level, slice its leading "[\n  " (leading whitespace striped for OTBS) and trailing "\n]"
    JSON.stringify([keywords], null, 2).slice(4, -2)
  %>,
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= ghUser %>/<%= ghRepo %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= ghUser %>/<%= ghRepo %>/issues"
  },
  "homepage": <%= JSON.stringify(homepage) %>,
  "engines": {
    "node": <%= JSON.stringify(enginesNode) %>
  },
  "files": [
    "dist",
    "!dist/test",
    "LICENSE"
  ],
  "scripts": {
    "dev": "gulp",
    "prepublish": "npm i gulp-6to5 && npm test",
    "test": "gulp build"
  },
  "author": {
    "name": <%= JSON.stringify(authorName) %>,
    "email": <%= JSON.stringify(authorEmail) %>
  },
  "license": <%= JSON.stringify(license) %>,
  "devDependencies": {
    "chalk": "^0.5.1",
    "gulp": "^3.8.10",
    "gulp-6to5": "^1.0.2",
    "gulp-batch": "^1.0.4",
    "gulp-filter": "^1.0.2",
    "gulp-jscs": "^1.3.1",
    "gulp-jshint": "^1.9.0",
    "gulp-load-plugins": "^0.8.0",
    "gulp-mocha": "^2.0.0",
    "gulp-rename": "^1.2.0",
    "gulp-rimraf": "^0.1.1",
    "gulp-util": "^3.0.1",
    "gulp-watch": "^3.0.0",
    "jshint-stylish": "^1.0.0",
    "lazypipe": "^0.2.2",
    "merge-stream": "^0.1.6",
    "reversepoint": "^0.2.1",
    "rimraf": "^2.2.8",
    "should": "^4.4.1",
    "through": "^2.3.6",
    "unique-stream": "^1.0.0"
  }
}
